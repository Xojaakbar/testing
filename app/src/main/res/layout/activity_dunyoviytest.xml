<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testuchun10"
    tools:context=".dunyoviytest">

    <TextView
        android:id="@+id/savol"
        android:layout_width="296dp"
        android:layout_height="116dp"
        android:background="#00F4EFEF"
        android:gravity="center"
        android:text="Finlandiya poytaxti?"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/ajovob"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="A) xelsinki"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/bjovob"
        app:layout_constraintEnd_toEndOf="@+id/cjovob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bjovob"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bjovob"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:text="B) budapesht"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/djovob"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/djovob"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/cjovob"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:text="C) varshava"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/djovob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/djovob"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/djovob"
        android:layout_width="144dp"
        android:layout_height="57dp"
        android:layout_marginBottom="64dp"
        android:text="D) stokgolm"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/prostotekts"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:fontFamily="sans-serif"
        android:gravity="center|center_horizontal"
        android:rotation="-3"
        android:rotationX="-10"
        android:rotationY="16"
        android:text="dunyoviy bilimlaringizni sinab ko'ring!"
        android:textColor="#E6E8E8"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>